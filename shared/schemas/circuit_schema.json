{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://circuit-design.com/schemas/circuit-design.json",
  "title": "Circuit Design Schema",
  "description": "JSON schema for circuit design generated by the Circuit Design Agent",
  "type": "object",
  "required": ["circuit_info", "blocks", "signal_flow"],
  "properties": {
    "circuit_info": {
      "type": "object",
      "required": ["name", "description", "supply_voltage"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the circuit"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the circuit functionality"
        },
        "supply_voltage": {
          "type": "string",
          "description": "Power supply requirements (e.g., ±12V, +5V)",
          "pattern": "^[±+]?\\d+V(\\s*[±+]\\d+V)*$"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Categories or tags for the circuit"
        }
      }
    },
    "blocks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "function", "position", "inputs", "outputs"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the block"
          },
          "name": {
            "type": "string",
            "description": "Display name of the block"
          },
          "function": {
            "type": "string",
            "description": "Detailed description of the block's function"
          },
          "position": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": {
                "type": "number",
                "description": "X coordinate for layout"
              },
              "y": {
                "type": "number",
                "description": "Y coordinate for layout"
              }
            }
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["signal_type", "name"],
              "properties": {
                "signal_type": {
                  "type": "string",
                  "enum": ["audio_signal", "cv_signal", "gate_signal", "sync_signal", "power_12v", "power_neg12v", "power_5v", "ground"],
                  "description": "Type of signal for automatic connection"
                },
                "name": {
                  "type": "string",
                  "description": "Display name of the input"
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether this input is required for operation"
                },
                "description": {
                  "type": "string",
                  "description": "Description of what this input does"
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["signal_type", "name"],
              "properties": {
                "signal_type": {
                  "type": "string",
                  "enum": ["audio_signal", "cv_signal", "gate_signal", "sync_signal", "power_12v", "power_neg12v", "power_5v", "ground"],
                  "description": "Type of signal for automatic connection"
                },
                "name": {
                  "type": "string",
                  "description": "Display name of the output"
                },
                "description": {
                  "type": "string",
                  "description": "Description of what this output provides"
                }
              }
            }
          },
          "implementation": {
            "type": "string",
            "description": "How the block is implemented (e.g., OTA integrator core)"
          },
          "how_it_works": {
            "type": "string",
            "description": "Explanation of the working principle"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Technical keywords for search and categorization"
          },
          "main_components": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Main electronic components used"
          },
          "parameters": {
            "type": "object",
            "description": "Key parameters and specifications"
          },
          "adjustment": {
            "type": "string",
            "description": "How to adjust or calibrate the block"
          },
          "test_points": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Important test points for debugging"
          },
          "troubleshooting": {
            "type": "string",
            "description": "Troubleshooting tips and diagnostic information"
          },
          "alternatives": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["method"],
              "properties": {
                "method": {
                  "type": "string",
                  "description": "Alternative implementation method"
                },
                "pros": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Advantages of this alternative"
                },
                "cons": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Disadvantages of this alternative"
                }
              }
            },
            "description": "Alternative implementation options"
          }
        }
      }
    },
    "signal_flow": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["signal_type", "from_block", "to_block"],
        "properties": {
          "signal_type": {
            "type": "string",
            "enum": ["audio_signal", "cv_signal", "gate_signal", "sync_signal", "power_12v", "power_neg12v", "power_5v", "ground"],
            "description": "Type of signal being transmitted"
          },
          "from_block": {
            "type": "string",
            "description": "ID of the source block"
          },
          "to_block": {
            "type": "string",
            "description": "ID of the destination block"
          },
          "description": {
            "type": "string",
            "description": "Description of what this signal carries"
          }
        }
      }
    }
  }
}